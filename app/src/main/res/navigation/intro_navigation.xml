<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro_navigation"
    app:startDestination="@+id/navigation_country">

    <fragment
        android:id="@+id/navigation_country"
        android:name="com.topnews.ui.intro.CountryFragment"
        android:label="@string/title_favourites"
        tools:layout="@layout/fragment_top">

        <action
            android:id="@+id/action_navigation_country_to_navigation_categories"
            app:destination="@id/navigation_categories"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/navigation_categories"
        android:name="com.topnews.ui.intro.CategoriesFragment"
        android:label="@string/title_favourites"
        tools:layout="@layout/fragment_top">

    </fragment>

    <fragment
        android:id="@+id/navigation_privacy"
        android:name="com.topnews.ui.intro.PrivacyFragment"
        android:label="@string/title_favourites"
        tools:layout="@layout/fragment_top">

    </fragment>

</navigation>