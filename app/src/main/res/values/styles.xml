<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/secondaryPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:windowBackground">@color/secondaryPrimary</item>
    </style>


    <!-- text styles -->
    <style name="BaseText">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Intro.Title" parent="BaseText">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Intro.Privacy" parent="BaseText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="About.Name" parent="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">20dp</item>
    </style>


    <style name="ToolbarTitle" parent="BaseText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="Navigation.Active" parent="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Navigation.Inactive" parent="BaseText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="Article.Text.Title" parent="BaseText">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Article.Text.Description" parent="BaseText">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="Article.Text.Source" parent="BaseText">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="Settings.ActionText" parent="BaseText">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="Settings.Title" parent="BaseText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--    card view -->

    <style name="BaseCardView" parent="Base.CardView">
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="CardView.Article" parent="BaseCardView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="BaseMaterialButton.Rounded.Intro" parent="BaseMaterialButton">
        <item name="cornerRadius">30dp</item>
        <item name="android:backgroundTint">@color/secondaryPrimaryLight</item>
    </style>

    <style name="BaseMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseMaterialButton.Long" parent="BaseMaterialButton">
        <item name="android:height">55dp</item>
    </style>


</resources>