<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/black</item>
    </style>


    <!-- fonts styles -->
    <style name="BaseText">
        <item name="android:fontFamily">@font/pt_sans</item>
    </style>

    <style name="ToolbarTitle" parent="BaseText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="BaseCardView" parent="Base.CardView">
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="CardView.Article" parent="BaseCardView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>


    <style name="Navigation.Active" parent="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Navigation.Inactive" parent="BaseText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="Article.Text.Title" parent="BaseText">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Article.Text.Description" parent="BaseText">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="Article.Text.Source" parent="BaseText">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

</resources>